client.urgent           #CC6666 #900000 #C4CBD4 #CC6666   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command SCRIPT_DIR=/usr/lib/i3blocks i3blocks

        # Disable scrolling
        bindsym button4 nop
        bindsym button5 nop

        workspace_min_width 40

        font pango:Hack 12

        colors {
            background #2D303B
            statusline #F9F9F9
            separator #666666

            # class           border  bg      text
            focused_workspace  #404552 #268bd2 #F9F9F9
            active_workspace   #333333 #404552 #C4CBD4
            inactive_workspace #333333 #404552 #C4CBD4
            urgent_workspace   #2f343a #900000 #C4CBD4
            binding_mode       #2f343a #900000 #C4CBD4
        }
}

# Switch keyboard layout
bindcode $mod+$kc_o exec setxkbmap us; exec pkill -RTMIN+10 i3blocks
bindcode $mod+$kc_p exec setxkbmap ua -variant winkeys; exec pkill -RTMIN+10 i3blocks
bindcode $mod+$kc_backslash exec setxkbmap ru; exec pkill -RTMIN+10 i3blocks

# exec_always --no-startup-id xset s 600
exec_always --no-startup-id xset dpms 600
exec_always --no-startup-id xset b off  # turn off bell
exec_always --no-startup-id xss-lock ~/bin/lock.sh

# Screenshot
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/$(date)"

# Lock hotkey
bindcode $mod+shift+$kc_x exec ~/bin/lock.sh
# Startup programs
exec qutebrowser
